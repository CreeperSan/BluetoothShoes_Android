<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="224dp">
        <creeper_san.myshoes.view.Thermometer
            android:id="@+id/mainTemperatureThermometer"
            app:therm_color="#66ccff"
            android:layout_gravity="center"
            android:layout_width="64dp"
            android:layout_height="224dp" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginStart="14dp"
                android:id="@+id/mainTemperatureTempText"
                android:text="25℃"
                android:textSize="48sp"
                android:layout_marginTop="32dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginStart="16dp"
                android:id="@+id/mainTemperatureHumidityText"
                android:layout_marginTop="8dp"
                android:text="28%"
                android:textSize="36sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>


    <com.anderson.dashboardview.view.DashboardView
        android:visibility="gone"
        android:id="@+id/mainTemperatureMeter"
        android:layout_gravity="center"
        app:maxNumber="50"
        android:text="当前温度"
        app:startProgressColor="#66ccff"
        app:endProgressColor="#ff9999"
        app:startNumber="0"
        app:unit="℃"
        android:layout_width="224dp"
        android:layout_height="224dp" />


    <android.support.v7.widget.CardView
        android:layout_margin="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/mainTemperatureSuggestionText"
            android:layout_margin="16dp"
            android:text="气温不错，要不去跑个步？"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_margin="4dp"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Switch
                android:id="@+id/mainTemperaturePowerSwitch"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="center"
                android:layout_alignBottom="@id/mainTemperaturePowerSwitch"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:text="保暖开关"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/mainTemperatureCardDiver"
                android:layout_marginTop="4dp"
                android:src="#e0e0e0"
                android:layout_below="@id/mainTemperaturePowerSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:padding="16dp"
                android:orientation="horizontal"
                android:layout_below="@id/mainTemperatureCardDiver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/mainTemperatureHintText"
                    android:textSize="22sp"
                    android:text="25℃"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <SeekBar
                    android:id="@+id/mainTemperatureSeekbar"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="0dp"
                    android:progress="15"
                    android:max="20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>