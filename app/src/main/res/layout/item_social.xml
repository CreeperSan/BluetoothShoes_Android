<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_person_gray_24dp"
        android:id="@+id/beadSocialHead"
        android:layout_width="64dp"
        android:layout_height="64dp" />

    <LinearLayout
        android:id="@+id/beanSocialEndLayout"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_toEndOf="@id/beadSocialHead"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/beanSocialName"
                tools:text="小宫有纱Office"
                android:textColor="#303030"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/beanSocialTime"
                android:layout_marginStart="8dp"
                tools:text="4分钟前"
                android:textColor="#909090"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:id="@+id/beanSocialUserName"
            tools:text="\@box_komiyaarisa"
            android:textColor="#909090"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/beanSocialContent"
            tools:text="そーいえばヘッダー変えた。適当にふふふん〜って書いたやつ。一番最後にいる顔はよく書くヤツっ。唇と睫毛がポイント ​​​​"
            android:layout_marginTop="4dp"
            android:textColor="#303030"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/beanSocialImage"
            android:layout_marginTop="4dp"
            android:scaleType="center"
            android:src="@drawable/test_big_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ImageView
        android:src="#909090"
        android:layout_below="@id/beanSocialEndLayout"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>